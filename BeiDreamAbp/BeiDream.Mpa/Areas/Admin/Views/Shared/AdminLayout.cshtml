@model BeiDream.Mpa.Areas.Admin.Models.Layout.LayoutParamsViewModel
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="ThemeBucket">

    <title>@Model.Title</title>
    <link href="~/Areas/Admin/Content/style.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/style-responsive.css" rel="stylesheet" />
    @RenderSection("head", false)
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
</head>

<body class="sticky-header">

    <section>
        <!-- left side start-->
        <div class="left-side sticky-left-side">

            <!--logo and iconic logo start-->
            <div class="logo">
                <a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })"><img src="~/Areas/Admin/images/logo.png" alt=""></a>
            </div>

            <div class="logo-icon text-center">
                <a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })"><img src="~/Areas/Admin/images/logo_icon.png" alt=""></a>
            </div>
            <!--logo and iconic logo end-->


            <div class="left-side-inner">
                @Html.Action("Sidebar", "Layout", new { area = "Admin", activePageMenu = Model.ActivePageMenuName, activeMenu = Model.ActiveMenuName })
            </div>
        </div>
        <!-- left side end-->
        <!-- main content start-->
        <div class="main-content">

            <!-- header section start-->
            <div class="header-section">

                <!--toggle button start-->
                <a class="toggle-btn"><i class="fa fa-bars"></i></a>
                <!--toggle button end-->

                <!--page menu start -->
                    @Html.Action("PageMenu", "Layout", new { area = "Admin", activePageMenu = Model.ActivePageMenuName })
                <!--page menu end -->


                <!--notification menu start -->
                <div class="menu-right">
                    @Html.Action("NotificationMenu", "Layout", new { area = "Admin" })
                </div>
                <!--notification menu end -->

            </div>



            @RenderBody()



            <!--footer section start-->
            <footer class="sticky-footer">
                2014~2016 &copy; BeiDream
            </footer>
            <!--footer section end-->


        </div>
        <!-- main content end-->
    </section>

    <!-- Placed js at the end of the document so the pages load faster -->
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Areas/Admin/Scripts/jquery-ui-1.9.2.custom.min.js"></script>
    <script src="~/Areas/Admin/Scripts/jquery-migrate-1.2.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/Scripts/modernizr.min.js"></script>
    <script src="~/Areas/Admin/Scripts/jquery.nicescroll.js"></script>
    <!--common scripts for all pages-->
    <script src="~/Areas/Admin/Scripts/scripts.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>
